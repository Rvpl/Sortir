{% extends 'base.html.twig' %}

{% block title %}Sorties{% endblock %}

{% block body %}

    <div id="entete">
        <b>Filtrer les sorties</b>
        {{ form_start(formRecherche) }}
            {{ form_row(formRecherche.campus) }}
            {{ form_row(formRecherche.nom) }}
            {{ form_row(formRecherche.dateHeureDebut) }}
            {{ form_row(formRecherche.dateLimiteInscription) }}
        <button  type="submit" class="btn btn-primary">{{ button_label|default('Rechercher') }}</button>
        {{ form_end(formRecherche) }}
        <br>
    </div>

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date de la sortie</th>
                <th>Clôture</th>
                <th>Inscrits/places</th>
                <th>Etat</th>
                <th>Inscrit</th>
                <th>Organisateur</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sortie in sorties %}
            <tr>
                <td>{{ sortie.nom }}</td>
                <td>{{ sortie.dateHeureDebut ? sortie.dateHeureDebut|date('Y-m-d H:i') : '' }}</td>
                <td>{{ sortie.dateLimiteInscription ? sortie.dateLimiteInscription|date('Y-m-d H:i') : '' }}</td>
                <td>{{ sortie.nbInscriptionMax }}</td>
                <td>{{ sortie.etat.libelle }}</td>
                <td></td>
                <td>{{ sortie.organisateur.nom }}</td>
                <td>
                    <a href="{{ path('app_sortie_show', {'id': sortie.id}) }}">show</a>
                    <a href="{{ path('app_sortie_edit', {'id': sortie.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_sortie_new') }}">
        <button class="btn btn-warning">Créer une sortie</button>
    </a>
{% endblock %}
